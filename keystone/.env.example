# Backend Environment Configuration for Raspberry Pi 4
# Copy this to .env and update with your actual values

# PostgreSQL Database Connection
POSTGRES_URL=postgresql://youquantified:YOUR_PASSWORD@localhost:5432/youquantified
DATABASE_URL=postgresql://youquantified:YOUR_PASSWORD@localhost:5432/youquantified

# Session Secret (change to a random 32+ character string)
SESSION_SECRET=your_random_session_secret_min_32_chars

# Frontend URLs
FRONTEND_URL_DEV=http://localhost:3000
FRONTEND_URL=http://YOUR_PI_IP:3000

# Backend URLs
ASSET_BASE_URL_DEV=http://YOUR_PI_IP:3001
ASSET_BASE_URL=http://YOUR_PI_IP:3001

# Node Environment (production for Pi deployment)
NODE_ENV=production

# Server Port
PORT=3001
